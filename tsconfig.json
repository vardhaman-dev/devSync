{
	"compilerOptions": {
	  "target": "es6",                         
	  "module": "commonjs",                    
	  "outDir": "./out",                       
	  "rootDir": "./src",                      
	  "strict": true,                          
	  "sourceMap": true,                       
	  "moduleResolution": "node",              
	  "esModuleInterop": true,                 
	  "skipLibCheck": true                     
	},
	"include": [
	  "src/**/*"
	],
	"exclude": [
	  "node_modules",
	  ".vscode-test"
	]
  }
  